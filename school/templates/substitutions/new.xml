<form action="${h.url('substitutions')}" method="post" xmlns:py="http://genshi.edgewall.org/">
    <label for="date">Date:</label>
    <input type="text" id="date" name="date" value="${c.today}" />
    <label for="order">Order:</label>
    <select id="order" name="order">
        <option py:for="o in range(1,8)" value="${o}">${o}</option>
    </select>
    <label for="group">Group:</label>
    <select id="group" name="group">
        <option py:for="group in c.groups" value="${group.id}">${group.full_name}</option>
    </select>
    <input type="checkbox" name="part" value="1" checked="true" /> part1
    <input type="checkbox" name="part" value="2" checked="true" /> part2
    <label for="educator">Educator:</label>
    <select id="educator" name="educator">
        <option py:for="educator in c.educators" value="${educator.id}">${educator.name_with_title}</option>
    </select>
    <label for="comment">Comment:</label>
    <input type="text" id="comment" name="comment" />
    <input type="submit" />
</form>
