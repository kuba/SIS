<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      xmlns:py="http://genshi.edgewall.org/">
    <xi:include href="../base.xml" />
    <head>
        <title>Current lucky number</title>
    </head>
    <body>
        <py:choose test="">
            <div class="lucky_number" py:when="c.lucky">
                <div class="lucky_number_number">${c.lucky.number}</div>
                <div class="lucky_number_date">${c.lucky.date}</div>
            </div>
            <span py:otherwise="">
                No lucky number set! You should kill the school leader!
            </span>
        </py:choose>
    </body>
</html>
