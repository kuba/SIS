<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      xmlns:py="http://genshi.edgewall.org/">
    <xi:include href="../../base.xml" />
    <head>
        <title>Full teachers schedule.</title>
    </head>
    <body>
        <table border="1">
            <tr>
                <th rowspan="2">Educator</th>
                <th colspan="5">Day of the week</th>
            </tr>
            <tr>
                <td>Monday</td>
                <td>Tuesday</td>
                <td>Wednesday</td>
                <td>Thursday</td>
                <td>Friday</td>
            </tr>
            <tr py:for="e, days in c.educators">
                <td>${e.name_with_title}</td>
                <td py:for="day in days">
                    <py:choose test="len(day)">
                        <py:when test="0">&nbsp;</py:when>
                        <py:otherwise><xi:include href="day.xml" /></py:otherwise>
                    </py:choose>
                </td>
            </tr>
        </table>
    </body>
</html>
