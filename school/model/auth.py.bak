import os
from hashlib import sha1
from datetime import datetime

from sqlalchemy import Table, ForeignKey, Column
from sqlalchemy.types import String, Unicode, UnicodeText, Integer, DateTime, \
                             Boolean, Float
from sqlalchemy.orm import relation, backref, synonym
from sqlalchemy.ext.associationproxy import association_proxy

from school.model.meta import Base, metadata


class AuthMembership(Base):
    __tablename__ = 'auth_memberships'

    user_id = Column(ForeignKey('auth_users.id'), primary_key=True)
    user = relation('AuthUser')

    group_id = Column(ForeignKey('auth_groups.id'), primary_key=True)
    group = relation('AuthGroup')

class AuthGroup(Base):
    """
    An ultra-simple group definition.
    
    """
    __tablename__ = 'auth_groups'
    id = Column(Integer, primary_key=True)
    name = Column(Unicode(16), unique=True)

    users_membership = relation('AuthMembership')
    users = association_proxy('users_membership', 'user')

class AuthUser(Base):
    """
    Reasonably basic User definition. Probably would want additional
    attributes.
    
    """
    __tablename__ = 'auth_users'
    id = Column(Integer, primary_key=True)
    name = Column(Unicode(16), unique=True)
    _password = Column('password', Unicode(80))

    def _set_password(self, password):
        """Hash password on the fly."""
        hashed_password = password

        if isinstance(password, unicode):
            password_8bit = password.encode('UTF-8')
        else:
            password_8bit = password
        
        salt = sha1()
        salt.update(os.urandom(60))
        hash = sha1()
        hash.update(password_8bit + salt.hexdigest())
        hashed_password = salt.hexdigest() + hash.hexdigest()

        # Make sure the hased password is an UTF-8 object at the end of the
        # process because SQLAlchemy _wants_ a unicode object for Unicode
        # fields
        if not isinstance(hashed_password, unicode):
            hashed_password = hashed_password.decode('UTF-8')

        self._password = hashed_password

    def _get_password(self):
        """Return the password hashed"""
        return self._password

    password = synonym('_password', descriptor=property(_get_password,
                                                        _set_password))

    def validate_password(self, password):
        """
        Check the password against existing credentials.

        :param password: The password that was provided by the user to
                         try and authenticate. This is the clear text version
                         that we will need to match against the hashed one
                         in the database.
        :type password: :class:`unicode` object.

        :return: Whether the password is valid.
        :rtype: bool
        
        """
        hashed_pass = sha1()
        hashed_pass.update(password + self.password[:40])
        return self.password[40:] == hashed_pass.hexdigest()

class AuthGroupPermission(Base):
    __tablename__ = 'auth_group_permissions'

    group_id = Column(ForeignKey('auth_groups.id'), primary_key=True)
    group = relation('AuthGroup')

    permission_id = Column(ForeignKey('auth_permissions.id'), primary_key=True)
    permission = relation('AuthPermission')


class AuthPermission(Base):
    """
    A relationship that determines what each Group can do.
    
    """
    __tablename__ = 'auth_permissions'

    id = Column(Integer, primary_key=True)
    name = Column(Unicode(16), unique=True)
    groups_permission = relation('AuthGroupPermission')
    groups = association_proxy('auth_group_permissions', 'group')
